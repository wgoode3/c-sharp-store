@model Product

<div class="jumbotron">
    <h1>List a product</h1>
</div>

<form action="/product" method="post" class="well">
    <div class="form-group">
        <label>Product Name:</label>
        <input type="text" name="Name" placeholder="Product Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Product Price:</label>
        <input type="number" step="0.01" name="Price" placeholder="Product Name" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label>Manufacturer:</label>
        <input type="text" name="Manufacturer" placeholder="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer"></span>
    </div>
    <input type="submit" value="List Product" class="btn btn-success" />
    <a href="/market" class="btn btn-danger">Cancel</a>
</form>